<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="item"
            type="com.albert.shared.model.Sponsor" />

        <variable
            name="itemHandler"
            type="com.albert.home.ui.adapter.SponsorAdapter.ItemHandler" />
    </data>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="22dp"
        android:layout_marginVertical="10dp"
        android:adjustViewBounds="true"
        android:onClick="@{() -> itemHandler.clickSponsor(item)}"
        app:imgUrl="@{item.photoUrl}"
        tools:background="@color/bg_info"
        tools:src="@drawable/ic_android_white" />
</layout>